# STS Service E2E Test Environment (macOS)
# This file is used by tests/e2e/conftest.py for local Docker Compose testing

# STS Service Config (Real STS with CPU-only processing)
STS_CONTAINER_NAME=e2e-sts-service
STS_HOST=0.0.0.0
STS_PORT=3000

# Logging
LOG_LEVEL=INFO

# Processing Config (CPU-only for macOS - no GPU required)
DEVICE=cpu
ASR_MODEL=tiny              # Smallest Whisper model (faster loading, less accurate)
# ASR_MODEL=base            # Better accuracy, slower loading
# ASR_MODEL=small           # Best accuracy for CPU, ~30s loading time

# Provider Config (use mock for faster E2E tests)
TTS_PROVIDER=mock           # Options: mock, coqui
TRANSLATION_PROVIDER=mock   # Options: mock, deepl (requires DEEPL_AUTH_KEY)

# DeepL Config (only needed if TRANSLATION_PROVIDER=deepl)
# DEEPL_AUTH_KEY=your-api-key-here

# Network
NETWORK_NAME=e2e-sts-network

# Health Check
HEALTHCHECK_INTERVAL=10s
HEALTHCHECK_TIMEOUT=5s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=30s  # Allow time for model loading

# Note: For real ASR/TTS/Translation processing, change providers from 'mock' to real ones
# and increase HEALTHCHECK_START_PERIOD to 60s+ for model loading
