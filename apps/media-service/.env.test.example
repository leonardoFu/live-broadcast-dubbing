# Test Environment Configuration
# Copy to .env for local testing: cp .env.test.example .env

# =============================================================================
# TEST CONFIGURATION
# =============================================================================

# STS Service (use local STS or mock)
STS_SERVICE_URL=http://host.docker.internal:3000

# Verbose logging for debugging
LOG_LEVEL=DEBUG

# Lower resource limits for testing
MEDIA_SERVICE_CPU_LIMIT=2.0
MEDIA_SERVICE_MEMORY_LIMIT=2G
MEDIAMTX_CPU_LIMIT=1.0
MEDIAMTX_MEMORY_LIMIT=1G

# Reduced concurrent streams for testing
MAX_CONCURRENT_STREAMS=2

# Faster health checks for testing
HEALTHCHECK_INTERVAL=5s
HEALTHCHECK_START_PERIOD=5s

# Test-friendly settings
CIRCUIT_BREAKER_THRESHOLD=3
METRICS_ENABLED=true
