# Environment variables for Full STS Service
# Copy this file to .env and update with your actual values
# cp .env.example .env

# REQUIRED: DeepL API Key for translation
# Get your API key from: https://www.deepl.com/pro-api
DEEPL_AUTH_KEY=your-deepl-api-key-here

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# ASR Configuration
ASR_MODEL_SIZE=medium
ASR_DEVICE=cuda
ASR_TIMEOUT_MS=5000

# TTS Configuration
TTS_DEVICE=cuda
TTS_TIMEOUT_MS=10000

# Translation Configuration
TRANSLATION_TIMEOUT_MS=5000

# Duration Matching
DURATION_VARIANCE_SUCCESS_MAX=0.10
DURATION_VARIANCE_PARTIAL_MAX=0.20

# Backpressure Thresholds
BACKPRESSURE_THRESHOLD_LOW=3
BACKPRESSURE_THRESHOLD_MEDIUM=6
BACKPRESSURE_THRESHOLD_HIGH=10
BACKPRESSURE_THRESHOLD_CRITICAL=10

# Observability
ENABLE_ARTIFACT_LOGGING=true
ARTIFACTS_PATH=/tmp/sts-artifacts
ARTIFACT_RETENTION_HOURS=24
ARTIFACT_MAX_COUNT=1000
GPU_MONITORING_INTERVAL=5

# Model Paths
VOICE_PROFILES_PATH=/config/voices.json
