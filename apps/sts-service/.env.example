# STS Service Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required API Keys
# =============================================================================

# DeepL Translation API key
# Get yours at: https://www.deepl.com/pro-api
DEEPL_AUTH_KEY=your-deepl-api-key-here

# ElevenLabs TTS API key  
# Get yours at: https://elevenlabs.io/api
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# =============================================================================
# TTS Configuration
# =============================================================================

# TTS Provider: "elevenlabs" (cloud, default) or "coqui" (local)
TTS_PROVIDER=elevenlabs

# TTS timeout in milliseconds
TTS_TIMEOUT_MS=10000

# TTS device: "cpu" or "cuda" (for Coqui local TTS only)
TTS_DEVICE=cpu

# =============================================================================
# ASR Configuration
# =============================================================================

# Whisper model size: tiny, base, small, medium, large
ASR_MODEL_SIZE=medium

# ASR device: "cpu" or "cuda"
ASR_DEVICE=cpu

# ASR timeout in milliseconds
ASR_TIMEOUT_MS=5000

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable artifact logging for debugging
ENABLE_ARTIFACT_LOGGING=true

# Artifact retention in hours
ARTIFACT_RETENTION_HOURS=24
